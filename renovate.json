{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "github>murn0/renovate-config#v0.2.1",
        "github>aquaproj/aqua-renovate-config#1.6.0",
        "github>aquaproj/aqua-renovate-config:file#1.6.0(aqua/imports/*/.*\\.ya?ml)",
        "github>aquaproj/aqua-renovate-config:installer-script(install-aqua\\.mk)"
    ],
    "regexManagers": [
        {
            "fileMatch": ["install-aqua.mk"],
            "depNameTemplate": "aquaproj/aqua",
            "datasourceTemplate": "github-releases",
            "matchStrings": ["./aqua-installer -v (?<currentValue>.*)"]
        }
    ]
}